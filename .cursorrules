            "title",
            "summary",
            "quick_info",
            "technical_expertise",
            "certifications",
            "professional_experience",
            "major_projects",
            "education",
            "volunteering",
            "speaking_community"
          ]
        },
        "userConfig": {
          "location": ".cursor-user",
          "format": {
            "username": "string",
            "name": "string",
            "github": "string",
            "roles": [
              "string"
            ],
            "circles": [
              "string"
            ]
          }
        }
      }
